<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>
<html>
  <!--Black_Header-->
      <div>
          <header class="mb-5">
              <div class="bg-black p-4 text-white">
                  <div class= "">
                      <img class="w-15 h-8 object-cover pl-8"
                      src="https://dpsi7pmz5b6vt.cloudfront.net/assets/livewire-logo-wht-9b76a33186f8b07ecf583c5d0dcc15791cf7ffad1a946e1c5ff486c505a32f65.png">
                  </div>
              </div>
          </header>
      </div>

        <!--Type, Filter, Search, Sort-->
        <div class = "mx-4">
            <div class="flex flex-wrap -mx-4 -mb-4 mt-14 md:mb-0">
                <div class="w-full md:w-1/3 px-4 mb-4 md:mb-0">
                    <div class="flex flex-wrap -mx-4 -mb-4 md:mb-0">
                        <div class="w-full md:w-1/2 px-4 mb-4 md:mb-0"></div>
                        <div class="w-full md:w-1/2 px-4 mb-4 md:mb-0"></div>
                    </div>
                </div>
                <div class="w-full md:w-2/3 px-4 mb-4 md:mb-0">
                    <div class="flex flex-wrap -mx-4 -mb-4 md:mb-0">
                        <div class="w-full md:w-1/3 px-4 mb-4 md:mb-0"></div>
                        <div class="w-full md:w-1/3 px-4 mb-4 md:mb-0">
                            <div class="flex flex-wrap h-10 border border-gray-400 -mx-4 -mb-4 md:mb-0 rounded-md">
                                <div class="w-full md:w-1/5 mt-1.5 px-3 md:mb-0">
                                    <img class="h-6 w-6 object-fit avatar opacity-25"
                                        src= https://www.seekpng.com/png/full/65-659285_search-icon-transparent-background-material-design-magnifying-glass.png
                                        alt="">
                                </div>
                                <div class="w-full md:w-4/5 md:mb-0 text-gray-400">
                                    <div class="text-base mt-1.5">
                                    <!--Search-->
                                    <%= form_tag books_path, method: :get do %>
                                        <%= text_field_tag :search, "Search Fund Name" %>
                                        <%#= submit_tag 'Search' %>
                                    <% end %>  
                                    </div>             
                                </div>
                            </div>
                        </div>
                        <!--Sort-->
                        <div class="w-full md:w-1/3 px-4 mb-4 md:mb-0">                       
                            <div x-data="{show: false}" x-on:click.away="show = false" class="relative inline-block text-left">
                            <div>
                                <button x-on:click="show = !show" type="button" class="inline-flex justify-center w-full rounded-md border border-gray-400  px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-1 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-gray-800" id="menu-button" aria-expanded="true" aria-haspopup="true">
                                Sort
                                <!-- Heroicon name: solid/chevron-down -->
                                <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                                </button>
                            </div>
                            <div x-show="show" class="origin-top-right absolute right-0 mt-2 w-60 rounded-md shadow-lg uppercase bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
                                <div class="py-1 up" role="none">
                                <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
                                <a href="#" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-0">Default</a>
                                <a href="#" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-1">Management Fee</a>
                                <a href="#" class="text-gray-700 block px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-2">Growth Since Inception</a>
                                </div>
                            </div>
                            </div>                                           
                        </div>
                    </div>
                </div>
            </div>
        </div>


    <!--divide-->
    <div class = "">
      <div class="grid grid-cols-1 divide-y divide-gray-200 -mt-3 mb-4 m-4">
        <div class="select-none text-white">1</div>
        <div class="select-none text-white">2</div>
    </div>
  
    <!--Button_Groups-->
      <div class="flex justify-end text-sm uppercase text-gray-700 mx-4 select-none ">
          <div onclick="show1()" class="border border-gray-400 rounded-l-md w-40 h-10 hover:bg-gray-200 cursor-pointer">
              <div class="px-9 m-2">Summary</div>
          </div>
          <div onclick="show2()" class="border border-gray-400 w-60 h-10 hover:bg-gray-200 cursor-pointer">
              <div class="px-9 m-2">Performance View</div>
          </div>
          <div onclick="show3()" class="border border-gray-400 rounded-r-md border-black w-50 h-10 hover:bg-gray-200 cursor-pointer">
              <div class="px-9 m-2">Fees View</div>
          </div>
      </div>

    <!--Fund_Card-->
      <section class="mt-8">
          <% @books.each do |book| %>
              <%= render(FundCardComponent.new(id: "aaa")) do |component| %>
  
                  <% component.with(:avatar) do %><%= book.avatar_ %><%end%>
  
                  <% component.with(:m_fund) do %><%= book.m_fund_ %><%end%>
  
                  <% component.with(:fund_name) do %><%= book.fund_name_ %><%end%>
  
                  <% component.with(:shares) do %><%= book.shares_ %><%end%>
  
                  <% component.with(:mi) do %><%= book.mi_ %><%end%>
  
                  <% component.with(:mf) do %><%= book.mf_ %><%end%>
  
                  <% component.with(:gsi) do %><%= book.gsi_ %><%end%>
  
                  <% component.with(:year) do %><%= book.year_ %><%end%>
  
                  <% component.with(:month_1) do %><%= book.month_1_ %><%end%>
  
                  <% component.with(:year_1) do %><%= book.year_1_ %><%end%>
                  
                  <% component.with(:years_3) do %><%= book.years_3_ %><%end%>
                  
                  <% component.with(:years_5) do %><%= book.years_5_ %><%end%>
                  
                  <% component.with(:si) do %><%= book.si_ %><%end%>
  
                  <% component.with(:mf_2) do %><%= book.mf_2_ %><%end%>
                  
                  <% component.with(:ap) do %><%= book.ap_ %><%end%>
                  
                  <% component.with(:tcr) do %><%= book.tcr_ %><%end%>
                  
                  <% component.with(:date_) do %><%= book.da_te_ %><%end%>
              <%end%>  
              <%#= link_to 'Show', book %>
              <%#= link_to 'Edit', edit_book_path(book) %>
              <%#= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>   
          <% end %>
      </section>
  
      <br>
  
      <!---->
  
      <!---->
      <%= link_to 'New', new_book_path %>


      <!---->
     

      <!---->
      <div>
        <div >
          <%= page_entries_info @books %>
        </div>
        <%= will_paginate @books, :container => false %>
      </div>
    </div>
  </html>
  
  
  
<script>
    function show1() {
        for (var i=0;i<document.getElementsByClassName("Abox").length;i=i+3)
            { 
                document.getElementsByClassName("Abox")[i].style.display = "block"
                document.getElementsByClassName("Abox")[i+1].style.display = "none"
                document.getElementsByClassName("Abox")[i+2].style.display = "none"
            }
        }
    function show2() {
        for (var i=0;i<document.getElementsByClassName("Abox").length;i=i+3)
            { 
                document.getElementsByClassName("Abox")[i].style.display = "none"
                document.getElementsByClassName("Abox")[i+1].style.display = "block"
                document.getElementsByClassName("Abox")[i+2].style.display = "none"
            }
    }
    function show3() {
        for (var i=0;i<document.getElementsByClassName("Abox").length;i=i+3)
            { 
                document.getElementsByClassName("Abox")[i].style.display = "none"
                document.getElementsByClassName("Abox")[i+1].style.display = "none"
                document.getElementsByClassName("Abox")[i+2].style.display = "block"
            }
    }
</script>


